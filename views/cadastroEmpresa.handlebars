<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastre sua empresa</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <ul>
                <li><a href="/fornecedores">Tornar-se Fornecedor</a></li>
                <li><a href="/produtos">Produtos</a></li>
                <li><a href="/transacoes">Transações</a></li>
                <li><a href="/cadastrarEmpresa">Cadastre sua empresa</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <h1>Cadastro de Empresa</h1>
        {{#if success}}
            <div class="flash-success">{{success}}</div>
        {{/if}}
        {{#if error}}
            <div class="flash-error">{{error}}</div>
        {{/if}}
        <form action="/cadastrarEmpresa" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" required><br><br>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>
     
            <label for="senha">Senha:</label>
            <input type="password" id="senha" name="senha" required><br><br>
            
            <label for="telefone">Telefone:</label>
            <input type="text" id="telefone" name="telefone"><br><br>

            <label for="endereco">Endereço:</label>
            <textarea id="endereco" name="endereco" required></textarea><br><br>

            <label for="tipo">Tipo de Empresa:</label>
            <input type="text" id="tipo" name="tipo" required><br><br>

            <button type="submit">Cadastrar</button>
        </form>
        <a href="loginEmpresa">Já fez o cadastro da sua empresa? Faça login</a>
    </main>
</body>